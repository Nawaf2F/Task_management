<%if(tasks.level == 'Critical'){  %>
<div class="card" style="width: 18rem; display: inline-block; margin: 6px; background-color: rgba(240, 248, 255, 0.759); border: solid rgb(94, 2, 2) 4px;">
  <div class="card-body">
      <h5 class="card-title" style="padding: 5px; background-color:rgba(0, 0, 0, 0.751); color: aliceblue;"><%=tasks.title%></h5>
      <hr>
      <p class="card-text"><%=tasks.description%></p><br>
      <p class="card-text"><%=tasks.level%></p><br>
      <% } %>

