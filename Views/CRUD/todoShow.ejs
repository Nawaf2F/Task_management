<%if(tasks.level == 'Critical'){  %>
<div class="card" style="width: 18rem; display: inline-block; margin: 6px; background-color: rgba(240, 248, 255, 0.759); border: solid rgb(94, 2, 2) 3px;">
  <div class="card-body">
      <h5 class="card-title" style="padding: 6px; background-color:rgba(0, 0, 0, 0.751); color: aliceblue;"><%=tasks.title%></h5>
      <hr>
      <p class="card-text mt-4"><%=tasks.description%></p>
      <p class="card-text mt-4"><%=tasks.level%></p>

      <%Object.entries(owners).forEach(([ownerId, owner])=> {%>
        <%if(ownerId == tasks.owner){  %>
        <p class="card-text"><strong>Owner: <%= owner.username %></strong></p>
          <% } %>
        <%})%>
      <% } %>

      <%if(tasks.level == 'Major'){  %>
        <div class="card" style="width: 18rem; display: inline-block; margin: 6px; background-color: rgba(240, 248, 255, 0.759); border: solid rgb(178, 7, 7) 2px;">
          <div class="card-body">
              <h5 class="card-title" style="padding: 6px; background-color:rgba(0, 0, 0, 0.751); color: aliceblue;"><%=tasks.title%></h5>
              <hr>
              <p class="card-text mt-4"><%=tasks.description%></p>
              <p class="card-text mt-4"><%=tasks.level%></p>

              <%Object.entries(owners).forEach(([ownerId, owner])=> {%>
                <%if(ownerId == tasks.owner){  %>
                <p class="card-text"><strong>Owner: <%= owner.username %></strong></p>
                <% } %>
                <%})%>
        <% } %>

        <%if(tasks.level == 'Minor'){  %>
          <div class="card" style="width: 18rem; display: inline-block; margin: 6px; background-color: rgba(240, 248, 255, 0.759); border: solid darkgreen 2px;">
            <div class="card-body">
                <h5 class="card-title" style="padding: 6px; background-color:rgba(0, 0, 0, 0.751); color: aliceblue;"><%=tasks.title%></h5>
                <hr>
                <p class="card-text mt-4"><%=tasks.description%></p>
                <p class="card-text mt-4"><%=tasks.level%></p>

                <%Object.entries(owners).forEach(([ownerId, owner])=> {%>
                  <%if(ownerId == tasks.owner){  %>
                  <p class="card-text"><strong>Owner: <%= owner.username %></strong></p>
                  <% } %>
                  <%})%>
          <% } %>

          <%if(tasks.level == 'Medium'){  %>
            <div class="card" style="width: 18rem; display: inline-block; margin: 6px; background-color: rgba(240, 248, 255, 0.759); border: solid rgb(188, 188, 14) 2px;">
              <div class="card-body">
                  <h5 class="card-title" style="padding: 6px; background-color:rgba(0, 0, 0, 0.751); color: aliceblue;"><%=tasks.title%></h5>
                  <hr>
                  <p class="card-text mt-4"><%=tasks.description%></p>
                  <p class="card-text mt-4"><%=tasks.level%></p>

                  <%Object.entries(owners).forEach(([ownerId, owner])=> {%>
                    <%if(ownerId == tasks.owner){  %>
                    <p class="card-text"><strong>Owner: <%= owner.username %></strong></p>
                    <% } %>
                    <%})%>
            <% } %>
